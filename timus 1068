#include <iostream>

using namespace std;

int main()
{
    int n,sum=0;
     cin>>n;
     if(n==0 || n==1)
    {
        cout<<1<<endl;
    } 
     
   if(n>1)
   {
       for(int i=2;i<=n;i++)
   {
       
       sum=sum+i;
   }
       cout<<sum<<endl;
   }
   if(n<0)
   {
       n=n*-1;
       for(int i=2;i<=n;i++)
   {
       
       sum=sum+i;
   }
       cout<<"-"<<sum<<endl;
   }
    
    return 0;
}
